{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom",
      "dom.iterable" // TODO https://github.com/angular/material2/issues/14271
    ],
    "paths": {
      "vendors": [
        "dist/vendors"
      ],
      "vendors/*": [
        "dist/vendors/*"
      ],
      "commons": [
        "dist/commons"
      ],
      "commons/*": [
        "dist/commons/*"
      ]
    }
  }
}