{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:4200/dashboard",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/usr/bin/google-chrome-stable"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "url": "http://localhost:4200/dashboard"
        }
    ]
}
